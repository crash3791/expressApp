doctype html
mixin item(title, url)
  li
    a(href=url class=path == url ? 'active' : 'linka')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    ul
      +item('Stona Glowna', '/')
      +item('Aktualnosci', '/news')
      +item('Quiz', '/quiz')
      +item('Admin', '/admin')

    block content
